<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="fr.strada.smobile.ui.messagerie.boite_de_reception.BoiteReceptionViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.messagerie.boite_de_reception.BoiteReceptionFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleViewBoiteReception"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="10dp"
            tools:listitem="@layout/item_boite_reception"/>
    </FrameLayout>
</layout>