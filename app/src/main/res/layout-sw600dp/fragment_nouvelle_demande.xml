<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="fr.strada.smobile.ui.mes_frais.nouvelle_demande.NouvelleDemandeViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.mes_frais.nouvelle_demande.NouvelleDemandeFragment"
        android:background="@color/colorWhite"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="20dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:text="@string/Titre_"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:background="@drawable/bg_sub_menu_edit"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:fontFamily="@font/sfpro_display_light"
                    android:layout_marginBottom="15dp"
                    android:textSize="16sp"
                    android:text="@={viewModel.titre}"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:text="@string/Commentaire_"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    />
                <androidx.appcompat.widget.AppCompatEditText
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:background="@drawable/bg_sub_menu_edit"
                    android:layout_marginBottom="10dp"
                    android:gravity="top"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:fontFamily="@font/sfpro_display_light"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:hint="@string/ecrivez_votre_commentaire_ici"
                    android:text="@={viewModel.commentaire}"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sf_ui_display_semibold"
                    android:text="@string/DÃ©pense"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp"
                    android:layout_marginBottom="10dp"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleDepenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    />
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/btn_add_depense"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_btn_add_image"
                    android:padding="15dp"
                    android:src="@drawable/ic_add_justificatif_blue"
                    />
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_envoyer"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/bg_rectangle_blue_radius"
                    android:fontFamily="@font/sfpro_display_medium"
                    android:text="@string/Envoyer"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    app:titre="@{viewModel.titre}"
                    app:depenses="@{viewModel.depenses}"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.core.widget.NestedScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>